    for letter in user_word:
        print("",letter,end=" ")
    print()
        
    for letter in range(len(user_word)): 
        if user_word[letter]==random_word[letter]:
            print("ðŸŸ©",end=" ")
        elif user_word[letter] in random_word:
            print("ðŸŸ§",end="  ")
        else :
